<div class="container">
  <ul class="nav nav-pills">
    <li><%= link_to '後台總表', admin_root_path %></li>
    <li><%= link_to '文章列表', admin_posts_path %></li>
    <li><%= link_to '分類列表', admin_categories_path %></li>
    <li class="active"><%= link_to '使用者列表', admin_users_path %></li>    
  </ul>
</div>
<br>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_tag(admin_user_path(user.id), :method => 'post') do  %>    
              <div class="input-group">                                
                <%= select_tag('role', options_for_select([['管理員', 'admin'], ['一般使用者', 'normal']], user.role == 'admin' ? "admin" : "normal") )%> 
                <%= submit_tag "Update" %>
              </div>
            <% end %>                        
          </td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>