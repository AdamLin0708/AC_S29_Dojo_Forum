<div class="container">
  <table class="table table-bordered">
    <thead>
      <th>replies count</th>
      <th>Title</th>
      <th>Last Replied At</th>
      <th>Viewed count</th>
      <% if current_user %>
        <% if current_user.admin? %>
          <th>#</th>
        <% end %>  
      <% end %>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.replies_count %></td>
          <td><%= link_to(post.title, post_path(post.id)) %></td>
          <td><%= post.replies.order(updated_at: :desc).first.updated_at.strftime("%F") %></td>
          <td><%= post.viewed_count %></td>
          <% if current_user %>
            <% if current_user.admin? %>
              <td>
                <%= link_to '刪除', post_path(post.id), method: :delete, data: { confirm: "確定要刪除?"} %>
              </td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

