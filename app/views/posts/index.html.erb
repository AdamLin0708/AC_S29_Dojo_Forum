<div class="container">
  <table class="table table-bordered">
    <thead>
      <th>replies count</th>
      <th>Title</th>
      <th>Last Replied At</th>
      <th>Viewed count</th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.replies_count %></td>
          <td><%= link_to(post.title, post_path(post.id)) %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

