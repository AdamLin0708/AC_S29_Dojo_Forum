<div class="container-fluid padding-navbar">
 <div class="row">
  <%= form_for @user do |f| %>  
   <div class="col-md-8 col-md-offset-2">
      <div class="col-md-3">
        <div class="form-group">  
          <% if !@user.avatar.nil? %>
            <%= f.label :avatar, "大頭照" %><br>          
            <%= image_tag(@user.avatar, :class => 'img-responsive img-circle') %>
          <% else %>
            <%= f.label :avatar, "大頭照上傳" %><br>          
          <% end %>           
            <%= f.file_field :avatar %>                        
        </div>  
      </div>
      <div class="col-md-9">
        <div class="form-group">
           <%= f.label :username, "Name" %>
           <%= f.text_field :username, class: "form-control" %>
         </div>
         <div class="form-group">
           <%= f.label :introduction, "自我介紹" %>
           <%= f.text_area :introduction, class: "form-control", rows: 5, style: 'resize: none'%>
         </div>
         <div class="form-group">
           <%= f.submit "更新", class: "btn btn-primary pull-right" %>         
         </div>         
       </div>
    </div> 
  <% end %>
 </div>
</div>