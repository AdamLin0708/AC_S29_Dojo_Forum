<div class="container-fluid">
  <div class="row" style="background-color: lightblue">
    <div class="col-md-4">
      <% if current_user.avatar? %>
        <%= image_tag(current_user.avatar, class: 'img-circle img-responsive') %>
      <% else %>
        <img src="http://via.placeholder.com/200x200" class="img-circle img-responsive">
      <% end %> 
      <%= current_user.username %>
      <%= link_to '編輯', edit_user_path(current_user.id) %>
    </div>
    <div class="col-md-8">
      <%= current_user.introduction %>      
    </div>
  </div>
  <div class="container-fluid">
    <ul class="nav nav-pills">
      <li class="active"><%= link_to 'My Post', profile_user_path %></li>
      <li><%= link_to 'My Comment' %></li>
      <li><%= link_to 'My Collect'%></li>
      <li><%= link_to 'My Draft' %></li>
      <li><%= link_to 'My Friend'%></li>      
    </ul>
    <table class="table table-bordered">
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.status %></td>
          <td><%= post.created_at %></td>
          <td>edit delete</td>
        </tr>
      <% end %>
    </table>
  </div>
</div>